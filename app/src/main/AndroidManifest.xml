<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.chatapp">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_logo"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_logo_chat_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MessageChatActivity" android:theme="@style/AppThemeNoActionBarDashBoard">
        </activity>
        <activity
                android:name=".DashBoardActivity"
                android:theme="@style/AppThemeNoActionBarDashBoard">
        </activity>
        <activity
                android:name=".RegisterActivity"
                android:label="Lemon chat">
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
    </application>

</manifest>