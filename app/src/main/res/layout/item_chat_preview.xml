<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <View
            android:id="@+id/chat_preview_bottomLine"
            app:layout_constraintTop_toBottomOf="@id/chat_preview_image"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="1dp"
            android:background="@color/colorMain"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/colorMain"
            app:civ_border_width="2dp"
            android:id="@+id/chat_preview_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_logo"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"/>
    <TextView
            app:layout_constraintLeft_toRightOf="@+id/chat_preview_image"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorMain"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="UserName"
            android:id="@+id/chat_preview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            app:layout_constraintTop_toBottomOf="@id/chat_preview_name"
            app:layout_constraintLeft_toRightOf="@id/chat_preview_image"
            android:layout_margin="10dp"
            android:text="Message"
            android:id="@+id/chat_preview_lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="date"
            android:id="@+id/chat_preview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toTopOf="@id/chat_preview_bottomLine"
            android:text="5"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_new_messages_count"
            android:id="@+id/chat_preview_newMessagesCount"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
</android.support.constraint.ConstraintLayout>