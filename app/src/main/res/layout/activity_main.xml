<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="250dp"
            app:srcCompat="@mipmap/ic_logo"
            android:id="@+id/imageView3"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:textColor="@color/colorMain"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/mainEmailField" android:id="@+id/textView3"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorMain"
            android:hint="@string/hint_email"
            android:ems="10"
            android:id="@+id/mainEmailField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/mainPasswordField"
            android:backgroundTint="@color/colorMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_password"
            app:layout_constraintTop_toBottomOf="@+id/mainEmailField"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/SignIn"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/mainPasswordField"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="GET STARTED"
            android:textColor="@color/colorMain"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/SignUp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/SignIn"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_signup_background"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>