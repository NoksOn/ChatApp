<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        tools:context=".MessageChatActivity">
    <android.support.v7.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/chatToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorMain"
            app:popupTheme="@style/AppTheme">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:id="@+id/chatToolbarBack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="5dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:id="@+id/chatToolbarUserImg"
                android:layout_gravity="center_vertical"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_logo" />
        <TextView
                android:text="UserName"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:id="@+id/chatToolbarUserName"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                    android:text="Status"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/chatToolbarStatus"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/chatRecyclerViewBody"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/chatToolbar"
            app:layout_constraintBottom_toTopOf="@+id/chatMessageBar"/>

    <LinearLayout
            android:id="@+id/chatMessageBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <EditText
                android:id="@+id/chatMessageText"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="@string/hint_message"
                android:layout_marginLeft="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/chatAddFile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_clip_chat"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        <Button
                android:id="@+id/chatSend"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_voice_chat"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>