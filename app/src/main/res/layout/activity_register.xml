<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_color="@color/colorMain"
            android:src="@mipmap/ic_add_photo"
            android:id="@+id/LoadImg"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

    <TextView
            android:textColor="@color/colorMain"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="REGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/LoadImg"
            app:layout_constraintStart_toStartOf="@+id/registerEmailField"
            android:id="@+id/textView3"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorMain"
            android:hint="@string/hint_name"
            android:ems="10"
            android:id="@+id/registerNameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorMain"
            android:hint="@string/hint_email"
            android:ems="10"
            android:id="@+id/registerEmailField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerNameField"
            android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registerPasswordField"
            android:backgroundTint="@color/colorMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/hint_password"
            app:layout_constraintTop_toBottomOf="@+id/registerEmailField"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/registerPasswordField"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_background"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>